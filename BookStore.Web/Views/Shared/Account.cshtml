@{
    var session = (BookStore.Web.Common.AccountLogin)Session[BookStore.Common.CommonConstants.AccountSession];
    var urlrequest = HttpContext.Current.Request.Url.AbsolutePath;
}

@if (session == null)
{
    <li><a href="/dang-nhap.html?urlredirect=@urlrequest" title="Đăng nhập">Đăng nhập</a></li>
    <span>|</span>
    <li><a href="/dang-ky.html" title="Đăng ký">Đăng ký</a></li>
}
else
{
    <li><a href="javascript:void(0);" title="Đăng nhập">@session.Name</a></li>
    <span>|</span>
    <li><a href="/Account/Logout" title="Đăng ký">Thoát</a></li>
}

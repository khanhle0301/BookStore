
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section footerJS{
    <script src="/Assets/client/js/login.js"></script>
}
<input type="hidden" id="urlredirect" value="@ViewBag.UrlRedirect" />
<div class="container ">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">
                            <a href="#" class="active" id="login-form-link">Đăng nhập</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form accept-charset="UTF-8" id="customer_login" method="post">
                                <div class="errors" style="display:none;">
                                    <ul>
                                        <li style="color:red">Thông tin đăng nhập không hợp lệ.</li>
                                    </ul>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="username" id="login-form-username" tabindex="1" class="form-control" placeholder="Tài khoản" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="login-form-password" tabindex="2" class="form-control" placeholder="Mật khẩu">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3 ">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="3" class="form-control btn btn-login" value="Đăng nhập">
                                        </div>
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <div class="req_pass">
                                        <a href="/dang-ky.html" title="Đăng ký">Đăng ký</a>
                                    </div>
                                </div>
                            </form>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

